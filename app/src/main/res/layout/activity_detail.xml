<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgNavi"
    android:padding="10dp"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_detail_foto"
        android:layout_below="@id/tv_detail_nama"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:scaleType = "fitXY"
        />

    <TextView
        android:id="@+id/tv_detail_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nama Angkringan"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_detail_foto"
                android:layout_marginTop="20dp"
                android:text="Deskripsi:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_keterangan"
                android:layout_marginTop="12dp"
                android:justificationMode="inter_word"
                android:text="Detail Angkringan" />

            <TextView
                android:id="@+id/tv_daftarMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_deskripsi"
                android:layout_marginTop="15dp"
                android:text="Daftar Menu:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail_listMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_daftarMenu"
                android:layout_marginTop="12dp"
                android:justificationMode="inter_word"
                android:text="Menu Angkringan" />

        <Button
            android:id="@+id/action_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_detail_listMenu"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="SHARE" />
        </RelativeLayout>
</ScrollView>



